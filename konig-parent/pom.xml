<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>io.konig</groupId>
  <artifactId>konig-parent</artifactId>
  <version>2.0.0</version>
  <name>Konig Parent</name>
  <description>The parent project from which all the konig modules are built</description>
  <url>http://developers.konig.io/</url>
  <packaging>pom</packaging>
  <properties>
  	<konig.version>${project.version}</konig.version>
  	<license.licenseName>apache_v2</license.licenseName>
  	<license.inceptionYear>2015</license.inceptionYear>
  	<license.organizationName>Gregory McFall</license.organizationName>
    <license.excludes>src/test/resources/jsonld/owlshapes.json</license.excludes>
  	<sesame.version>2.8.7</sesame.version>
  	<junit.version>4.12</junit.version>
  	<slf4j.version>1.7.10</slf4j.version>
  	<jackson.version>2.6.3</jackson.version>
  	<jsonld-java.version>0.7.0</jsonld-java.version>
  	<httpclient.version>4.5.2</httpclient.version>
  	<poi.version>3.14</poi.version>
    <appengine.version>1.9.25</appengine.version>
  </properties>
  
  <licenses>
    <license>
      <name>The Apache Software License, Version 2.0</name>
      <url>http://www.apache.org/licenses/LICENSE-2.0.txt</url>
      <distribution>repo</distribution>
    </license>
  </licenses>
  
  <scm>
    <url>scm:git:ssh://git@github.com/konigio/konig.git</url>
    <connection>scm:git:ssh://git@github.com/konigio/konig.git</connection>  	
    <developerConnection>scm:git:ssh://git@github.com/konigio/konig.git</developerConnection>
    <tag>HEAD</tag>
  </scm>
  
  <modules>
  	<module>../konig-core</module>
  	<module>../konig-shacl</module>
  	<module>../konig-schemagen</module>
  	<module>../konig-spreadsheet</module>
  	<module>../konig-schemagen-maven-plugin</module>
  	<module>../konig-ldp</module>
  	<module>../konig-ldp-maven-plugin</module>
  	<module>../konig-gae-datastore</module>
<!--   	
  	<module>../konig-appengine</module>
-->
  </modules>
 
  <developers>
    <developer>
      <id>gmcfall</id>
      <name>Greg McFall</name>
      <email>gregory.mcfall@gmail.com</email>
    </developer>
  </developers>
  
  <distributionManagement>
	  <snapshotRepository>
	    <id>ossrh</id>
	    <url>https://oss.sonatype.org/content/repositories/snapshots</url>
	  </snapshotRepository>
  </distributionManagement>
  
  <build>
      
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>3.3</version>
        <configuration>
          <source>1.7</source>
          <target>1.7</target>
        </configuration>
      </plugin>
      
    </plugins>
  </build>
   <profiles>
  	<profile>
  		<id>release-profile</id>
  		<activation>
  			<property>
  				<name>performRelease</name>
  				<value>true</value>
  			</property>
  		</activation>
			<build>
				<plugins>
			    <plugin>
			      <groupId>org.sonatype.plugins</groupId>
			      <artifactId>nexus-staging-maven-plugin</artifactId>
			      <version>1.6.3</version>
			      <extensions>true</extensions>
			      <configuration>
			        <serverId>ossrh</serverId>
			        <nexusUrl>https://oss.sonatype.org/</nexusUrl>
			        <autoReleaseAfterClose>true</autoReleaseAfterClose>
			      </configuration>
			    </plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-gpg-plugin</artifactId>
						<executions>
							<execution>
								<id>sign-artifacts</id>
								<phase>verify</phase>
								<goals>
									<goal>sign</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-javadoc-plugin</artifactId>
						<executions>
							<execution>
								<id>attach-javadocs</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-source-plugin</artifactId>
						<executions>
							<execution>
								<id>attach-sources</id>
								<goals>
									<goal>jar</goal>
								</goals>
							</execution>
						</executions>
					</plugin>
				</plugins>
			</build>
  	</profile>
  	
  </profiles>
</project>